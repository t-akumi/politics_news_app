<!-- ニュースコンテナ -->
<section class="news-container">
  <h2 class="news-title"><%= @news.title %></h2>
  <p class="news-summary">
    <%= @news.summary %>
  </p>
</section>

<!-- チャットエリア -->
<section class="chat-container">
  <div class="chat-header">質問でさらに理解する</div>
  <div class="chat-messages">
    <div class="chat-message bot">このニュースに関連する質問を選択してください。</div>
  </div>
  <div class="chat-options">
    <button class="chat-option">選挙制度って何？</button>
    <button class="chat-option">政治用語を解説して</button>
    <button class="chat-option">ニュースの背景は？</button>
  </div>
</section>
